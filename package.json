{
  "name": "stock-manager",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "test": "jest",
    "start": "nodemon server.js",
    "client": "cd client/ && yarn run start",
    "server": "cross-env NODE_ENV=production nodemon server.js",
    "dev": "concurrently \"yarn run start\" \"cd client && yarn run start\"",
    "lint": "eslint --cache --fix",
    "format": "prettier . --write",
    "prepare": "husky install"
  },
  "repository": "https://github.com/devteni/stock-manager.git",
  "author": "devteni",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.24.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "husky": "^7.0.4",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "mongoose": "^6.0.12",
    "morgan": "^1.10.0",
    "nodemailer": "^6.7.0",
    "pg": "^8.7.3",
    "qrcode": "^1.4.4",
    "sass": "^1.45.2",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.1.6",
    "winston": "^3.3.3",
    "yamljs": "^0.3.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "eslint": "^8.1.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.6",
    "nodemon": "^2.0.14",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "lint-staged": {
    "*.js": [
      "yarn run format",
      "yarn run lint"
    ]
  }
}
